@model IList<TyresStore.Repository.Models.Tyre>

@if (Model.Count > 0)
{
    <table class="table inverse ">
    <thead>
        <tr>
            <th colspan="10" class="text-center">
                Coresponding tyres for selected vehicle 
            </th>
        </tr>
        <tr>
            <th>Brand</th>
            <th>Season</th>
            <th>Article code</th>
            <th>Price</th>
            <th class="text-right back"><div id="back-button" class="back-button">x</div></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tyre in Model)
        {
            <tr>
                <td> @tyre.Brand</td>
                <td>
                    @tyre.Season
                </td>
                <td>
                    @tyre.ArticleCode
                </td>
                <td>
                    @tyre.Price
                </td>
                <td class="button-select">
                    <button type="button" class="btn btn-primary btn-success" onclick="mainModel.updateCart(@tyre.ID, '@tyre.Brand', ' @tyre.Price' )">Add to cart <i class="fa fa-plus"></i></button>
                </td>
            </tr>
        }
    </tbody>
</table>
}

