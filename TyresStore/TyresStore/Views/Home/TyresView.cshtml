@model IList<TyresStore.Repository.Models.Tyre>

@if (Model.Count > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Brand</th>
                <th>Season</th>
                <th>Article code</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tyre in Model)
            {
                <tr>
                    <td> @tyre.Brand</td>
                    <td>
                        @tyre.Season
                    </td>
                    <td>
                        @tyre.ArticleCode
                    </td>
                    <td>
                        @tyre.Price
                    </td>
                    <td class="button-select">
                        <button type="button" class="btn btn-primary" onclick="mainModel.updateCart(@tyre.ID)">Add to chart<i class="fas fa-plus"></i></button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

