@model IList<TyresStore.Repository.Models.Basket>

@if (Model.Count > 0)
{
    <table class="table inverse ">
        <thead>
            <tr>
                <th>Brand</th>
                <th>Season</th>
                <th>Article code</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td> @item.Description</td>
                    <td>
                        @item.AddedDate
                    </td>
                    <td>
                        @item.TyreId
                    </td>
                    <td>
                        @item.Price Ron
                    </td>
                    <td class="delete-item">
                        <button type="button" class="btn btn-primary btn-danger update-cart-button" onclick="basketModel.deleteItem(@item.ID)">Delete Item <i class="fa fa-minus"></i></button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

